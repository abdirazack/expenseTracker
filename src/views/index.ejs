<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense Tracker</title>
  <!-- Link to Bootstrap CSS -->
  <link rel="stylesheet" href="/public/css/bootstrap.min.css">
  <style>

    .hero-banner {
      background-color: #f8f9fa;
      padding: 100px 0;
      text-align: center;
    }
    .feature {
      padding: 50px 0;
      text-align: center;
    }
    .testimonial {
      padding: 50px 0;
      text-align: center;
    }
    .cta {
      padding: 100px 0;
      text-align: center;
    }
  </style>
</head>
<body>

  <!-- Hero Banner -->
  <section class="hero-banner">
    <div class="container">
      <h1>Welcome to Expense Tracker</h1>
      <p>A simple and powerful tool to track your expenses</p>
      <a href="#features" class="btn btn-primary btn-lg">Learn More</a>
    </div>
  </section>

  <!-- Features -->
  <section id="features" class="feature">
    <div class="container">
      <h2>Key Features</h2>
      <div class="row">
        <div class="col-md-4">
          <h3>Expense Tracking</h3>
          <p>Effortlessly track your expenses and manage your budget</p>
        </div>
        <div class="col-md-4">
          <h3>Income Management</h3>
          <p>Keep track of your income sources and monitor your financial health</p>
        </div>
        <div class="col-md-4">
          <h3>Custom Categories</h3>
          <p>Create custom expense categories to organize your spending</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="testimonial">
    <div class="container">
      <h2>What Our Users Say</h2>
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <div class="card">
            <div class="card-body">
              <p>"Expense Tracker has helped me gain control over my finances. Highly recommended!"</p>
              <p class="text-muted">- John Doe</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call-to-Action -->
  <section class="cta">
    <div class="container">
      <h2>Start Managing Your Finances Today</h2>
      <a href="#" class="btn btn-primary btn-lg">Sign Up Now</a>
    </div>
  </section>

  <!-- Bootstrap JavaScript -->
  <script src="/public/js/jquery.js"></script>
  <script src="/public/js/bootstrap.bundle.min.js"></script>
</body>
</html>
